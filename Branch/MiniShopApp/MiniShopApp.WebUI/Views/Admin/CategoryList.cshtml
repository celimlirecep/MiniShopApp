@model List<Category>

<div class="row">
    <div class="col-md-12">
        <h6 class="display-4">Admin Products Managament</h6>
        <hr />
        <a href="/admin/categories/create" class="btn btn-sm btn-primary">Create Category</a>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th width="20">ID</th>
                    <th width="200">name</th>
                    <th width="500">Description</th>
                    <th width="100">url</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.CategoryId</td>

                    <td>@item.Name</td>


                    <td>@item.Description</td>
                    <td>@item.Url</td>
                    <td>
                        <a href="/admin/categories/@item.CategoryId" class="btn btn-sm btn-primary mr-1">Edit</a>
                        <form action="/Admin/CategoryDelete" method="post" class="d-inline">
                            <input type="hidden" name="categoryId" value="@item.CategoryId" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
                    }
                }
                else
                {
                    //ÜRün olmadığında yapılacak işlem
                }

            </tbody>
        </table>
    </div>
</div>
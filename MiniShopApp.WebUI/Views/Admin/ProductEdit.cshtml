@model ProductModel


<h1>Edit Product</h1>
<hr />

<form asp-controller="Admin" asp-action="ProductEdit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row mb-2 ">
              
                <div class="col-sm-9">
                    <img src="~/img/@Model.ImageUrl" alt="Alternate Text" />
                    <input type="file" class="form-control" name="file" asp-for="ImageUrl" />
                </div>
            </div>

            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Name:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
            </div>
            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Url:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Url" />
                </div>
            </div>
            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Description:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Description" />
                </div>
            </div>

            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Price:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" asp-for="Price" />
                </div>
            </div>
            <div class="form-group row mb-2 ">
                <input type="hidden" name="ProductId" class="form-control" value="@Model.ProductId" />
                <div class="col-sm-9">
                    <button class="btn btn-primary" type="submit">Save Product</button>
                </div>
            </div>


        </div>

        <div class="col-md-4">
            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="@item.CategoryId" 
                           name="categoryIds" id="category_@item.CategoryId"

                           @*buraya işaretleme işlemleri gelicek ************************************@
                           @if (Model.SelectedCategories!=null)
                           {
                               @(Model.SelectedCategories.Any(i=>i.CategoryId==item.CategoryId)?"checked":"")
                           }
                             @if (Model.CategoryList != null) 
                           {
                               @for (int i = 0; i < Model.CategoryList.Count; i++)
                               {
                                   @(item.CategoryId == Model.CategoryList[i] ? "checked" : "") 
                               } 
                           }



                           />
                    <label class="form-check-label">@item.Name</label>
                </div>
            }
            <hr />
            <div class="form-check">
                <input type="checkbox" asp-for="IsApproved" class="form-check-input " />
                <label class="form-check-label">Is Aproved?</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label class="form-check-label">Is Home?</label>
            </div>


        </div>


    </div>




</form>




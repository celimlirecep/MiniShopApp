@model ProductModel

<h1>Create Product</h1>
<hr />

<form asp-controller="Admin" asp-action="ProductCreate" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-8">
            @* <div class="text-danger" asp-validation-summary="All"></div>*@ 
            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Name:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Description:</label>
                <div class="col-sm-9">
                    <input type="text" asp-for="Description" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Image:</label>
                <div class="col-sm-9">
                    <input type="file" name="file"/>
                    <span class="text-danger" >@ViewBag.ImageMessage</span>

                </div>
            </div>
            <div class="form-group row mb-2 ">
                <label class=" col-sm-3 col-form-label">Price:</label>
                <div class="col-sm-9">
                    <input type="number" asp-for="Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
            </div>
            <div class="form-group row mb-2 ">

                <div class="col-sm-9">
                    <button class="btn btn-primary" type="submit">Save Product</button>
                </div>
            </div>


        </div>

        <div class="col-md-4">
         
            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" value="@item.CategoryId"
                           @if (Model.CategoryList != null) 
                           {
                               @for (int i = 0; i < Model.CategoryList.Count; i++)
                               {
                                   @(item.CategoryId == Model.CategoryList[i] ? "checked" : "") 
                               } 
                           }
                           name="categoryIds" id="category_@item.CategoryId" />
                    <label class="form-check-label">@item.Name</label>
                </div>
            }
        <span class="col-form-label text-danger">@ViewBag.Categorymessage</span> @***************************************************@
            <hr />
            <div class="form-check">
                <input type="checkbox" asp-for="IsApproved" class="form-check-input" />
                <label class="form-check-label">Is Aproved?</label>
            </div>
            <div class="form-check">
                <input type="checkbox" asp-for="IsHome" class="form-check-input" />
                <label class="form-check-label">Is Home?</label>
            </div>


        </div>


    </div>




</form>



